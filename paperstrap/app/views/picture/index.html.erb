<div class="jumbotron" align="center">
	<h1>Picture#index</h1>
	<p><small>Find me in app/views/picture/index.html.erb</small></p>
</div>
<% flash.each do |name, msg| -%>
	<div class="alert alert-success" role="alert">
	<%= msg%>
	</div>
<% end -%>
<div class="container">
<div class="row" >
	<%@pictures.each do |x|%>
	<div class="col-xs-3 col-md-2 col-sm-2" style="height:200px">
		<div class="thumbnail">
			<%=link_to image_tag(x.image.url(:thumb)), action: 'show', controller: 'picture', id: x.id %>
		</div>

	</div>
	<%end%>
	<div class="clearfix visible-md-block"></div>
</div>
</div>
<div align="center">
<%= link_to "Больше картинок!", :picture_new, class: 'btn btn-large btn-primary' %>
</div>